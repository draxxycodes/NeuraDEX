{
    "rules": [
      {
        "id": "high_volatility",
        "condition": {"type": "gt", "field": "volatility", "value": 0.15},
        "effect": {"risk": "HIGH", "explanation": "volatility > 0.15"}
      },
      {
        "id": "medium_volatility",
        "condition": {"type": "gt", "field": "volatility", "value": 0.06},
        "effect": {"risk": "MEDIUM", "explanation": "volatility > 0.06"}
      },
      {
        "id": "low_liquidity",
        "condition": {"type": "lt", "field": "liquidity_ratio", "value": 0.1},
        "effect": {"risk": "MEDIUM", "explanation": "liquidity ratio < 0.1"}
      },
      {
        "id": "concentration",
        "condition": {"type": "gt", "field": "holding_fraction", "value": 0.3},
        "effect": {"risk": "HIGH", "explanation": "single holding > 30% of portfolio"}
      }
    ]
  }